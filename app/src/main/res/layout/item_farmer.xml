<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="8dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/view_outline"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvFarmerName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/source_sans_pro_semi_bold"
        tools:text="Full Name"
        android:textColor="@color/colorTextPrimary"
        app:layout_constraintStart_toEndOf="@+id/ivFarmerImg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLocale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        tools:text="Abuja"
        android:textColor="@color/colorTextPrimary"
        android:fontFamily="@font/source_sans_pro_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivFarmerImg"
        app:layout_constraintTop_toBottomOf="@+id/tvFarmerName" />

    <TextView
        android:id="@+id/tvFarmerMobile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="24dp"
        tools:text="09072341223"
        android:fontFamily="@font/source_sans_pro_regular"
        android:textColor="@color/colorTextPrimary"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@+id/tvLocale"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvLocale"
        app:layout_constraintTop_toTopOf="@+id/tvLocale" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivFarmerImg"
        android:layout_width="56dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/ShapeAppearance.App.CircleImageView"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>