<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashBoardFragment">

    <View
        android:id="@+id/vTotalFarmers"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_success"
        app:layout_constraintBottom_toBottomOf="@+id/vTotalFarmers"
        app:layout_constraintStart_toStartOf="@+id/vTotalFarmers"
        app:layout_constraintTop_toTopOf="@+id/vTotalFarmers" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Total Farmers"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/vTotalFarmers" />

    <TextView
        android:id="@+id/tvTotalFarmerCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        tools:text="5000"
        android:textSize="24sp"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/source_sans_pro_bold"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <View
        android:id="@+id/vNewFarmers"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vTotalFarmers" />


    <ImageView
        android:id="@+id/ivNewFarmers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_success"
        app:layout_constraintBottom_toBottomOf="@+id/vNewFarmers"
        app:layout_constraintStart_toStartOf="@+id/vNewFarmers"
        app:layout_constraintTop_toTopOf="@+id/vNewFarmers" />

    <TextView
        android:id="@+id/tvNewFarmersHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="New Farmer"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toEndOf="@+id/ivNewFarmers"
        app:layout_constraintTop_toTopOf="@+id/vNewFarmers" />

    <TextView
        android:id="@+id/tvNewFarmer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="0"
        android:textSize="24sp"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/source_sans_pro_bold"
        app:layout_constraintStart_toStartOf="@+id/tvNewFarmersHeader"
        app:layout_constraintTop_toBottomOf="@+id/tvNewFarmersHeader" />

    <View
        android:id="@+id/vUpdatedProfiles"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vNewFarmers" />


    <ImageView
        android:id="@+id/ivUpdatedProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_success"
        app:layout_constraintBottom_toBottomOf="@+id/vUpdatedProfiles"
        app:layout_constraintStart_toStartOf="@+id/vUpdatedProfiles"
        app:layout_constraintTop_toTopOf="@+id/vUpdatedProfiles" />

    <TextView
        android:id="@+id/tvUpdatedFarmerHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Captured Farm"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toEndOf="@+id/ivUpdatedProfile"
        app:layout_constraintTop_toTopOf="@+id/vUpdatedProfiles" />

    <TextView
        android:id="@+id/tvUpdatedFarmer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        tools:text="5000"
        android:textSize="24sp"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/source_sans_pro_bold"
        app:layout_constraintStart_toStartOf="@+id/tvUpdatedFarmerHeader"
        app:layout_constraintTop_toBottomOf="@+id/tvUpdatedFarmerHeader" />

    <View
        android:id="@+id/vPendingCapture"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vUpdatedProfiles" />


    <ImageView
        android:id="@+id/ivPendingCapture"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:padding="2dp"
        android:src="@drawable/ic_success"
        app:layout_constraintBottom_toBottomOf="@+id/vPendingCapture"
        app:layout_constraintStart_toStartOf="@+id/vPendingCapture"
        app:layout_constraintTop_toTopOf="@+id/vPendingCapture" />

    <TextView
        android:id="@+id/tvPendingCaptureHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Pending Farm Capture"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toEndOf="@+id/ivPendingCapture"
        app:layout_constraintTop_toTopOf="@+id/vPendingCapture" />

    <TextView
        android:id="@+id/tvPendingCapture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        tools:text="5000"
        android:textSize="24sp"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/source_sans_pro_bold"
        app:layout_constraintStart_toStartOf="@+id/tvPendingCaptureHeader"
        app:layout_constraintTop_toBottomOf="@+id/tvPendingCaptureHeader" />

</androidx.constraintlayout.widget.ConstraintLayout>