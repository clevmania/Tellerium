            app:hintAnimationEnabled="false"
            app:hintEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toEndOf="@+id/tilNationality"
            app:layout_constraintTop_toBottomOf="@+id/tvMaritalStatus">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tieMaritalStatus"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/source_sans_pro_regular"
                android:inputType="text"
                android:maxLength="10"
                android:textColor="@color/colorTextPrimary" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvOccupation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:text="@string/occupation"
            android:fontFamily="@font/source_sans_pro_semi_bold"
            android:textColor="@color/colorTextPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilNationality" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilOccupation"
